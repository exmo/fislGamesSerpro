# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# ROTAS DO SERVIDOR, DISPONIVEIS NA APLICACAO WEB, ACESSIVEIS APEANS PARA USUARIO ADMIN
GET     /                           controllers.Application.formQRCode
GET     /qrcode/form                controllers.Application.formQRCode
GET     /qrcode/render/:texto       controllers.Application.renderQRCode(texto: String, size:Int ?= 480)
POST    /qrcode/render              controllers.Application.renderQRCodePost
POST    /qrcode/gerar               controllers.Application.gerarQRCode
POST    /qrcode/:id/delete          controllers.Application.deleteQRCode(id: Long)
GET     /ranking                    controllers.Application.ranking
GET     /respostas/:email/:nome     controllers.Application.respostas(email: String, nome: String, pontuacao: Int ?= -1)

# ROTAS DISPONIVEIS PARA ACESSO REST VIA APP PHONEGAP, RETORNANDO JSONP
GET     /usuario/criar/:email/:nome/:telefone     controllers.Application.criarUsuario(email: String, nome: String, telefone: String, callback: String)
GET     /desafio/:id/:email/:resposta   controllers.Application.responderDesafio(id: Long, email: String, resposta: String, callback: String)

# Authentication
GET     /login                      controllers.Application.login
POST    /auth                       controllers.Application.authenticate
GET     /logout                     controllers.Application.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
